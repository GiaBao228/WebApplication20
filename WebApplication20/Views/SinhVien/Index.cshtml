@model IEnumerable<WebApplication20.Models.SinhVien>

<h2>Danh sách Sinh Viên</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã SV</th>
            <th>Họ Tên</th>
            <th>Giới Tính</th>
            <th>Ngày Sinh</th>
            <th>Ngành Học</th>
            <th>Hình Ảnh</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSV</td>
                <td>@item.HoTen</td>
                <td>@item.GioiTinh</td>
                <td>@item.NgaySinh.ToShortDateString()</td>
                <td>@item.NganhHoc.TenNganh</td>
                <td>
                    <img src="~/@item.Hinh" alt="Ảnh sinh viên" style="width: 100px; height: auto;" />
                </td>
                <td class="action-buttons">
                    <a href="@Url.Action("Details", new { id = item.MaSV })" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Chi tiết
                    </a>
                    <a href="@Url.Action("Edit", new { id = item.MaSV })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Chỉnh sửa
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.MaSV })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
