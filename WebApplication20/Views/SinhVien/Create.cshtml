@model WebApplication20.Models.SinhVien

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">Thêm Sinh Viên Mới</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false)
        </div>
    }

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Mã Sinh Viên -->
            <div class="col-md-6 mb-3">
                <label asp-for="MaSV" class="form-label">Mã Sinh Viên</label>
                <input asp-for="MaSV" class="form-control" required />
                <span asp-validation-for="MaSV" class="text-danger"></span>
            </div>

            <!-- Họ Tên -->
            <div class="col-md-6 mb-3">
                <label asp-for="HoTen" class="form-label">Họ Tên</label>
                <input asp-for="HoTen" class="form-control" required />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <!-- Giới Tính -->
            <div class="col-md-6 mb-3">
                <label asp-for="GioiTinh" class="form-label">Giới Tính</label>
                <select asp-for="GioiTinh" class="form-select" required>
                    <option value="">-- Chọn giới tính --</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
                <span asp-validation-for="GioiTinh" class="text-danger"></span>
            </div>

            <!-- Ngày Sinh -->
            <div class="col-md-6 mb-3">
                <label asp-for="NgaySinh" class="form-label">Ngày Sinh</label>
                <input asp-for="NgaySinh" type="date" class="form-control" required />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>

            <!-- Ngành Học -->
            <div class="col-md-6 mb-3">
                <label asp-for="MaNganh" class="form-label">Ngành Học</label>
                <select asp-for="MaNganh" class="form-select" asp-items="ViewBag.NganhHocList" required>
                    <option value="">-- Chọn ngành học --</option>
                </select>
                <span asp-validation-for="MaNganh" class="text-danger"></span>
            </div>

            <!-- Hình Ảnh -->
            <div class="col-md-6 mb-3">
                <label asp-for="Hinh" class="form-label">Hình Ảnh</label>
                <input type="file" name="Hinh" class="form-control" accept="image/*" />
                <span asp-validation-for="Hinh" class="text-danger"></span>
            </div>
        </div>

        <!-- Nút Gửi Form -->
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary me-2 px-4">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
